---
const { serv = "Desarrollo web", lang = "es" } = Astro.props;

let servTxt, valTxt, contTxt, discTxt;

if( lang == "pt" ){
  servTxt= "Serviço";
  valTxt = "Validade";
  contTxt = "Contato";
  discTxt = "Este orçamento é válido por 30 dias <br> a contar da data da sua apresentação.";
}else{
  servTxt = "Servicio";
  valTxt = "Validez";
  contTxt = "Contacto";
  discTxt = "Este presupuesto tiene una validez de 30 días <br> desde la fecha de presentación del mismo.";
}

---

<div class="heading flex flex-col gap-3 mb-10 xg:mb-13">

  <div class="wp-block-columns">
    <div class="wp-block-column" style="flex-basis:33.33%">
      <h2 class="wp-block-heading"> { servTxt } </h2>
    </div>
    <div class="wp-block-column" style="flex-basis:66.66%">
      {serv}
    </div>
  </div>

  <div class="wp-block-columns">
    <div class="wp-block-column" style="flex-basis:33.33%">
      <h2 class="wp-block-heading" id="intro"> { valTxt } </h2>
    </div>
    <div class="wp-block-column" style="flex-basis:66.66%">
      <Fragment set:html={discTxt} />
    </div>
  </div>

  <div class="wp-block-columns">
    <div class="wp-block-column" style="flex-basis:33.33%">
      <h2 class="wp-block-heading" > { contTxt } </h2>
    </div>
    <div class="wp-block-column" style="flex-basis:66.66%">
      Nicolás González <br />
      nicolook.pro@gmail.com <br />
      +598 98 398 010 <br />
      <a href="https://nicowebsite.com" target='_blank' rel='noreferrer noopener' class="link-underline" >nicowebsite.com</a>
    </div>
  </div>
</div>
