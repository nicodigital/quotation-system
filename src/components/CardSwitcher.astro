import slugify from '../js/slugify.js'

const { 
    title = "TÃ­tulo x defecto", 
    desc = "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quo, temporibus?",
    cat = 'Categoria',
    url,
    status = 'active'
} = Astro.props;

let slug = slugify(title);

---
<style>
    .card{
        @apply bg-neutral-800 text-white px-2 py-3 flex flex-col gap-2 rounded-xl
    }

    .sw-status{
        @apply hidden;

            &.active{
                @apply flex;
            }

    }

</style>

<a href={`/films/${slug}`} class={`card sw-item sw-status animate ${status}`} data-switch={cat} data-anim="bottom" data-astro-prefetch="hover"  >
    <img class="rounded-xl opacity-30" src='https://placehold.co/600x400' alt='' loading='lazy' decoding='async' />
    <h2 class="h2 font-bold" >
        {title}
    </h2>
    <p>
        {desc.slice(0,150)}...
    </p>
    <p class="small font-bold text-right">
        {cat}
    </p>
</a>