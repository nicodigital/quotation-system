const { 
    title = "TÃ­tulo x defecto", 
    desc = "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quo, temporibus?",
    cat = 'Categoria',
    url,
    status = 'active'
} = Astro.props;
// const baseUrl = import.meta.env.BASE_URL;
